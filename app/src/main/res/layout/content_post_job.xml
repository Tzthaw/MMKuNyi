<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svNewPost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_post_job">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputShort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/shortEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Short Description"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/fullEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Description"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/border_bg"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputPostedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small">

                    <net.aungpyaephyo.mmtextview.components.MMEditText
                        android:id="@+id/postedEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Posted Date"
                        android:textSize="@dimen/text_regular" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small">

                    <net.aungpyaephyo.mmtextview.components.MMEditText
                        android:id="@+id/postCloseEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Post Close Date"
                        android:textSize="@dimen/text_regular" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/border_bg"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small">

                    <net.aungpyaephyo.mmtextview.components.MMEditText
                        android:id="@+id/AmountEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Offer Amount"
                        android:textSize="@dimen/text_regular" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small">

                    <net.aungpyaephyo.mmtextview.components.MMEditText
                        android:id="@+id/OfferDurationEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Offer per Day"
                        android:textSize="@dimen/text_regular" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/border_bg"
            android:padding="@dimen/margin_medium">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputTotalWorking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <net.aungpyaephyo.mmtextview.components.MMEditText
                    android:id="@+id/totalworkEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total Working Days"
                    android:textSize="@dimen/text_regular" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputTotalWorking"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputDayPerWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_medium">

                        <net.aungpyaephyo.mmtextview.components.MMEditText
                            android:id="@+id/dayPerWeekEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Working Days per Week"
                            android:textSize="@dimen/text_regular" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputHourPerDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small">

                        <net.aungpyaephyo.mmtextview.components.MMEditText
                            android:id="@+id/hourPerDayEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Working Hour per Day"
                            android:textSize="@dimen/text_regular" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputRequiredSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/requiredEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Required Skill"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/phoneEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/noteEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Important Notes"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small">

            <net.aungpyaephyo.mmtextview.components.MMEditText
                android:id="@+id/locationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:textSize="@dimen/text_regular" />

        </android.support.design.widget.TextInputLayout>

        <net.aungpyaephyo.mmtextview.components.MMButton
            android:id="@+id/newPostBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="အလုပ်အသစ်တင်ရန်"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x"
            android:theme="@style/AppTheme.BlueButton" />

    </LinearLayout>

</ScrollView>