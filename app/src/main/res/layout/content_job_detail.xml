<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_overlapTop="40dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_job_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:id="@+id/shortDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold" />

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:id="@+id/fullDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center_horizontal"
                android:stretchColumns="2">

                <TableRow android:gravity="start">

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/emailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_medium"
                        android:textSize="@dimen/text_small"
                        android:drawableStart="@drawable/ic_email"
                        android:gravity="start" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/availableText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_face"
                        android:gravity="start" />
                </TableRow>

                <TableRow>

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/amountText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_money"
                        android:gravity="start" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/phNoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_phone"
                        android:gravity="start" />
                </TableRow>

                <TableRow>

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/postDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_date"
                        android:gravity="start" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/ratingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_rate"
                        android:gravity="start" />
                </TableRow>
            </TableLayout>

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableStart="@drawable/ic_location"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Relevant People"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/relevantRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_small"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Required Skill"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/requiredLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Applicant People"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/applicantRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_small"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:id="@+id/jobDurationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="JobDuration"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/dateRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_date"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="2017-8-1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_regular" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_toEndOf="@+id/startDate"
                        android:drawablePadding="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_date_range"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="2017-8-9"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_regular" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/totalWorking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateRange">

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/totalDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:drawablePadding="@dimen/margin_medium"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="TotalWorkingDay"
                        android:textSize="@dimen/text_regular_2x"
                        android:textStyle="bold" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/totalDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_toEndOf="@+id/totalDateTitle"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="2"
                        android:textSize="@dimen/text_regular" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/workDayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/totalWorking">

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/workTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:drawablePadding="@dimen/margin_medium"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="WorkingDaysPerWeek"
                        android:textSize="@dimen/text_regular_2x"
                        android:textStyle="bold" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/workingDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_toEndOf="@+id/workTitle"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="2"
                        android:textSize="@dimen/text_regular" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/workingHourLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/workDayLayout">

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/workingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:drawablePadding="@dimen/margin_medium"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="WorkingHoursPerDay"
                        android:textSize="@dimen/text_regular_2x"
                        android:textStyle="bold" />

                    <net.aungpyaephyo.mmtextview.components.MMTextView
                        android:id="@+id/workHour"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_toEndOf="@+id/workingTitle"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="2"
                        android:textSize="@dimen/text_regular" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Interested People"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/interestedRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_small"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical">

            <net.aungpyaephyo.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Viewed"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/viewedRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_small"
                android:orientation="vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/apply"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Apply for this job"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>